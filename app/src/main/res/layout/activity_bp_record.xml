<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="90dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/idbp"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:padding="3dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/bttansion"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="167dp"
        android:layout_toRightOf="@+id/idbp"
        android:maxLines="1"
        android:padding="3dp"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bttansiontext"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="150dp"
        android:layout_toRightOf="@+id/idbp"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Büyük Tan:"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/daybp"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bttansion"
        android:layout_marginLeft="169dp"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@+id/idbp"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/daybptextt"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bttansion"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="190dp"
        android:layout_toRightOf="@+id/idbp"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        android:text="Tarih:"
        android:visibility="visible" />

    <TextView
        android:id="@+id/kttansion"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bttansion"
        android:layout_marginLeft="169dp"
        android:layout_toRightOf="@+id/idbp"
        android:maxLines="1"
        android:padding="3dp"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kttansiontext"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bttansion"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="150dp"
        android:layout_toRightOf="@+id/idbp"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Küçük Tan:"
        android:textSize="17sp"
        android:textStyle="bold" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/tansion1" />


</RelativeLayout>